pkgname=python-thumbnailtron
pkgver=0.0.1
pkgdesc="File thumbnailer for images, pdfs and more"
pkgrel=1
arch=('any')
license=('LGPL-3.0')
url='https://github.com/Salamek/huawei-lte-api'
makedepends=('python-setuptools')
depends=(

)

prepare() {
  mkdir -p "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../thumbnailtron" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../tests" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../setup.py" "${srcdir}/${pkgname}"
  cp -R "${srcdir}/../../README.md" "${srcdir}/${pkgname}"
}

package() {
  cd "${srcdir}/${pkgname}"
  python setup.py install --root="$pkgdir/" --optimize=1
}
